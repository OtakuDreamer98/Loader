    if val then
        fov = math.clamp(val, 10, 500)
        fovInput.Text = tostring(fov)
        fovCircle.Radius = fov * (Camera.ViewportSize.Y / 1080)
    else
        fovInput.Text = tostring(fov)
    end
end)

